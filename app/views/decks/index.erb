<h1>Available Decks</h1>

<% @decks.each do |deck| %>
<ul>
 <li>
  <img src="<%=deck.cards.first.image_url%>" alt="<%=deck.name%>"></li>
 <li><%=deck.name%></li>
<form action="/turns" method="POST">
<input type ="hidden" name="deck_id" value="<%= deck.id %>"/>
     <input type="submit" value="Start game!">
</form>


<% end %>
